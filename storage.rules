rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.exists(/databases/(default)/documents/users/$(request.auth.uid));
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read any file (for public access to meal photos)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to upload files to their own meal-photos folder
    match /meal-photos/{userId}/{mealPhotoId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
